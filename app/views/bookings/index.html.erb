<div class= "container justify-content-center">
  <% @bookings.each do |booking| %>
    <div class="card mb-3 ">
      <div class="row g-0">
        <div class="col-md-4">
          <%= booking.cup.photo.attached? ? cl_image_tag(booking.cup.photo.key, class: "img-thumbnail", width: "300") : "No image available" %>
        </div>
        <div class="col-md-6">
          <div class="card-body align-middle">
            <h4 class="card-title align-middle" style="font-weight: bold">
              <%= booking.cup.name %>
            </h4>
            Cup from
            <i style="font-style: italic"><%= booking.cup.user.name %></i>
            <p>
              <%= booking.start_date %> to <%= booking.return_date %> &#40;<%= sums = (booking.return_date - booking.start_date).to_i %> <%= sums > 1? "days" : "day"%>&#41;
              <br>
              Â¥ <%= booking.total_price %></p>
          </div>
        </div>
        <div class="col-md-2 align-middle">
          <div class="card-text align-middle" style="font-size: 28px;"><%= booking.status %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
